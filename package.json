{
  "name": "hash-handler",
  "version": "2.0.0",
  "description": "Simple handler for URI hashes.",
  "author": {
    "name": "Lars Graubner",
    "email": "mail@larsgraubner.de",
    "url": "http://larsgraubner.de"
  },
  "homepage": "https://github.com/lgraubner/hash-handler",
  "keywords": [
    "ecosystem:browser",
    "history",
    "hash",
    "hashbang",
    "hashhandler",
    "hashchange"
  ],
  "main": "dist/HashHandler.js",
  "module": "dist/HashHandler.es.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgraubner/hash-handler.git"
  },
  "bugs": {
    "url": "https://github.com/lgraubner/hash-handler/issues"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "chai": "^3.5.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-config-prettier": "^1.7.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "flow-bin": "^0.45.0",
    "flow-remove-types": "^1.2.1",
    "gzip-size-cli": "^2.0.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.1",
    "mocha": "^3.3.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.3.1",
    "reify": "^0.9.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-flow": "^1.1.1",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "uglify-js": "^2.8.22"
  },
  "license": "MIT",
  "files": [
    "src",
    "dist",
    "!**/__tests__"
  ],
  "scripts": {
    "lint": "eslint src",
    "precommit": "lint-staged",
    "clean": "rimraf dist",
    "flow": "flow",
    "rollup": "rollup -c",
    "minify": "uglifyjs $npm_package_main -cm -o $npm_package_main --in-source-map ${npm_package_main}.map --source-map ${npm_package_main}.map",
    "build": "npm-run-all lint flow test clean rollup minify size",
    "size": "echo \"Gzip size: $(gzip-size $npm_package_main)\"",
    "test": "mocha --require reify/node --require flow-remove-types/register src/__tests__/**/*.js"
  },
  "dependencies": {
    "query-string": "^4.3.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  }
}
